<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="125dp"


    android:padding="16dp"
    tools:context=".profileHome"

    tools:ignore="LabelFor">

    <!--//notify -->


    <!--crd -->


    <TextView
        android:id="@+id/textTypeofContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textName"
        android:layout_centerVertical="true"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/textNumber"
        android:textColor="#1A237E"
        android:textSize="14sp"
        android:textStyle="italic"
        tools:text="Type of Contact" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageContact"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/editpage_image" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textNumber"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/imageContact"
        android:textColor="#DD2C00"
        android:textSize="16sp"
        android:textStyle="italic"
        tools:text="Email" />

    <TextView
        android:id="@+id/textNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textName"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/imageContact"
        android:textSize="16sp"
        android:textStyle="italic"
        tools:text="Contact Number" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/imageContact"
        android:textColor="#212121"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Contact Name" />


</RelativeLayout>